<?xml version="1.0" encoding="UTF-8"?>
<project name="build" default="build" basedir=".">

	<path id="classpath">
		<!-- path to Mozilla Rhino JavaScript engine -->
		<pathelement location="lib/java/js.jar" />
		<!-- path to Google Closure Compiler -->
		<pathelement location="lib/java/compiler.jar" />
	</path>

	<target name="build" description="build">

		<exec executable="java">
			<arg value="-Dfile.encoding=UTF8" />
			<arg value="-classpath" />
			<arg value="${toString:classpath}" />
			<arg value="org.mozilla.javascript.tools.shell.Main" />
			<arg line="-modules lib/js" />
			<arg line="-main build.js" />
		</exec>

	</target>

</project>